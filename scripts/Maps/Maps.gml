{
	// [Base, Inner, Body]
	
	switch (ID)
	{
		case 0: // Plains
			//return [0, $c7c3c2, $e8f1ff, $362142]; // SNOWY TILE
			return [0, $518700, $43b500, $362142];
			break;
			
		case 1: // Forest
			return [0, $595312, $518700, $362142];
			break;
			
		case 2: // Rocks
			return [0, $3b3349, $4f575f, $362142];
